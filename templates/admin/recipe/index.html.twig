{% extends 'admin/admin.html.twig' %}

{% block title %}Toute les recettes{% endblock %}

{% block body %}

  <p>
    <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.create') }}">Cr√©er une recette</a>
  </p>
  <table class="table table-success table-striped">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Categorie</th>
        <th> 'style= with: 200px' Actions</th>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for recipe in recipes %}
      <tr>
        <td>
          <a href="{{ path('admin.recipe.edit', { 'id': recipe.id}) }}">{{ recipe.gettitle}}</a>
        </td>
        <td>
          {{ recipe.category.name | default('') }}
        </td>
        <td>
         <div class="d-flex justify-content-end gap-1 ">
            <a class="btn btn-primary btn-sm px-5 mr-3" href="{{ path('admin.recipe.edit', { 'id': recipe.id}) }}">Editer</a>
            <form action="{{ path('admin.recipe.delete', { 'id': recipe.id}) }}" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm px-4 mx-2">Supprimer</button>
            </form>
         </div>
        </td>
      </tr>
    {% endfor %}
  </tbody>
  </table>

{% endblock %}
